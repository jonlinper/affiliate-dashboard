{% extends 'preuser.html.twig' %}

{% block title %}{{ 'preuser.reset.title'|trans }}{% endblock %}

{% block content %}            
    <h4>{{ 'preuser.reset.title'|trans }}</h4>
    <h6 class="fw-light">{{ 'preuser.reset.update.enter'|trans }}</h6>

    {{ form_start(resetForm, {'attr': {'class': 'pt-3'}}) }}
        <div class="form-group">
            {{ form_errors(resetForm.plainPassword.first) }}
            {{ form_widget(resetForm.plainPassword.first, {
                'attr': {
                    'placeholder': 'Password',
                    'class': 'form-control form-control-lg'
                }
            }) }}
        </div>
        <div class="form-group">
            {{ form_errors(resetForm.plainPassword.second) }}
            {{ form_widget(resetForm.plainPassword.second, {
                'attr': {
                    'placeholder': 'Repeat Password',
                    'class': 'form-control form-control-lg'
                }
            }) }}
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">{{ 'preuser.reset.update.submit'|trans }}</button>
        </div>
    {{ form_end(resetForm) }}
{% endblock %}